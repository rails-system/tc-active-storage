<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Posted at:</strong>
  <%= @post.posted_at %>
</p>

<p class = "images-details">
  <% if @post.main_image.attached? %>
    <%= link_to ('<i class="fa fa-times"></i>').html_safe, 
                delete_image_attachment_post_url(@post.main_image.signed_id),
                remote: true,
                method: :delete, class: 'image-delete',
                data: { confirm: 'Are you sure?' } %>
    <%= image_tag @post.main_image, class: 'image-view' %>
  <% end %> 
</p>

<p class = "images-details">
  <% @post.other_images.each do |other| %>
    </br>
    <%= link_to ('<i class="fa fa-times"></i>').html_safe, 
                delete_image_attachment_post_url(other.signed_id),
                remote: true,
                method: :delete, class: 'image-delete',
                data: { confirm: 'Are you sure?' } %>
    <%= image_tag other, class: 'image-view' %>
  <% end %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
